<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         id="WebApp_ID" version="3.1">

  <display-name>spring-mvc</display-name>

  <absolute-ordering/>

  <!--Создаем dispatcher servlet-->
  <servlet>
    <servlet-name>dispatcher</servlet-name>
    <!-- DispatcherServlet - класс из библиотеки springframework для создания dispatcher servlet-->
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <!--Путь до файла со spring конфигурацией-->
      <param-value>/WEB-INF/applicationContext.xml</param-value>
    </init-param>
    <!--DispatcherServlet загружаем в первую очередь-->
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <!-- Любой url (/) перенаправляем на dispatcher servlet -->
    <!--DispatcherServlet перенаправит этот запрос на нужный контроллер -->
    <servlet-name>dispatcher</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

</web-app>